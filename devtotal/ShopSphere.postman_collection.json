            ],
            "url": "{{baseUrl}}/reviews/68e1508b4cb15c1309142292",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"title\": \"Titolo aggiornato\"\n}"
            }
          }
        },
        {
          "name": "Delete Review",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{userToken}}"}],
            "url": "{{baseUrl}}/reviews/68e1508b4cb15c1309142293"
          }
        },
        {
          "name": "Mark Review as Helpful",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/reviews/68e1508b4cb15c1309142292/helpful"
          }
        },
        {
          "name": "Search Reviews",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/reviews/search?q=fotocamera&productId=1",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", "search"],
              "query": [
                {"key": "q", "value": "fotocamera"},
