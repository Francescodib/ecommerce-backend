          }
        },
        {
          "name": "Get Review Comments",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/reviews/68e1508b4cb15c1309142292/comments"
          }
        },
        {
          "name": "Create Comment on Review",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{userToken}}"}
            ],
            "url": "{{baseUrl}}/reviews/68e1508b4cb15c1309142292/comments",
