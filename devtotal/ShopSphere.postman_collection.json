{
  "info": {
    "name": "ShopSphere API",
    "description": "Complete API collection for ShopSphere e-commerce backend (MySQL + MongoDB)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Test\",\n  \"last_name\": \"User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+39 333 1234567\"\n}"
            }
          }
        },
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const response = pm.response.json();",
                  "  if (response.success && response.data && response.data.token) {",
                  "    pm.collectionVariables.set('adminToken', response.data.token);",
                  "    console.log('Admin token saved:', response.data.token);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@shopsphere.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const response = pm.response.json();",
                  "  if (response.success && response.data && response.data.token) {",
                  "    pm.collectionVariables.set('userToken', response.data.token);",
                  "    console.log('User token saved:', response.data.token);",
                  "  }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"mario.rossi@email.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{userToken}}"}],
            "url": "{{baseUrl}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/categories"
          }
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/categories/1"
          }
        },
        {
          "name": "Create Category (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/categories",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nuova Categoria\",\n  \"description\": \"Descrizione della categoria\"\n}"
            }
          }
        },
        {
          "name": "Update Category (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/categories/1",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Elettronica Aggiornata\"\n}"
            }
          }
        },
        {
          "name": "Delete Category (Admin)",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/categories/7"
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products?limit=10&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {"key": "limit", "value": "10"},
                {"key": "offset", "value": "0"},
                {"key": "category", "value": "1", "disabled": true},
                {"key": "minPrice", "value": "100", "disabled": true},
                {"key": "maxPrice", "value": "1000", "disabled": true},
                {"key": "search", "value": "iphone", "disabled": true}
              ]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products/1"
          }
        },
        {
          "name": "Get Top Selling Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/top-selling?limit=5",
              "host": ["{{baseUrl}}"],
              "path": ["products", "top-selling"],
              "query": [{"key": "limit", "value": "5"}]
            }
          }
        },
        {
          "name": "Get Products by Category",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products/category/1"
          }
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/products",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"category_id\": 1,\n  \"name\": \"Nuovo Prodotto\",\n  \"description\": \"Descrizione del prodotto\",\n  \"price\": 99.99,\n  \"stock_quantity\": 50,\n  \"img_url\": \"https://example.com/image.jpg\"\n}"
            }
          }
        },
        {
          "name": "Update Product (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/products/1",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 1099.00,\n  \"stock_quantity\": 30\n}"
            }
          }
        },
        {
          "name": "Delete Product (Admin)",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/products/31"
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products?search=iphone&category=1&minPrice=500",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {"key": "search", "value": "iphone"},
                {"key": "category", "value": "1"},
                {"key": "minPrice", "value": "500"}
              ]
            }
          }
        },
        {
          "name": "Get Product Reviews",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/1/reviews?limit=10&sort=recent",
              "host": ["{{baseUrl}}"],
              "path": ["products", "1", "reviews"],
              "query": [
                {"key": "limit", "value": "10"},
                {"key": "sort", "value": "recent"},
                {"key": "minRating", "value": "4", "disabled": true}
              ]
            }
          }
        },
        {
          "name": "Create Product Review",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{userToken}}"}
            ],
            "url": "{{baseUrl}}/products/4/reviews",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"title\": \"Ottime cuffie!\",\n  \"comment\": \"Cancellazione del rumore eccezionale, comfort ottimo.\",\n  \"pros\": [\"Cancellazione rumore\", \"Comfort\"],\n  \"cons\": [\"Prezzo alto\"],\n  \"orderId\": 2\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": {
              "raw": "{{baseUrl}}/users?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [
                {"key": "limit", "value": "10"},
                {"key": "role", "value": "customer", "disabled": true}
              ]
            }
          }
        },
        {
          "name": "Get User by ID (Self)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{userToken}}"}],
            "url": "{{baseUrl}}/users/3"
          }
        },
        {
          "name": "Get User by ID (Admin)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/users/3"
          }
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{userToken}}"}
            ],
            "url": "{{baseUrl}}/users/3",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+39 333 9999999\",\n  \"first_name\": \"Mario Aggiornato\"\n}"
            }
          }
        },
        {
          "name": "Change User Role (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{adminToken}}"}
            ],
            "url": "{{baseUrl}}/users/5",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"seller\"\n}"
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{adminToken}}"}],
            "url": "{{baseUrl}}/users/31"
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{userToken}}"}],
            "url": "{{baseUrl}}/users/3/orders"
          }
        },
        {
          "name": "Get User Addresses",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{userToken}}"}],
            "url": "{{baseUrl}}/users/3/addresses"
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Get Review by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/reviews/68e1508b4cb15c1309142292"
          }
        },
        {
          "name": "Update Review",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
