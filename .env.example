# ====================
# ShopSphere - Environment Variables
# ====================
# Copia questo file in .env e modifica i valori

# ====================
# SERVER
# ====================
PORT=3000
NODE_ENV=development

# ====================
# MySQL Database
# ====================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shopsphere
DB_USER=shopsphere_user
DB_PASSWORD=shopsphere_pass

# ====================
# MongoDB Database
# ====================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=shopsphere
MONGO_USER=root
MONGO_PASSWORD=root123

# URL completo MongoDB (alternativa)
MONGO_URI=mongodb://root:root123@localhost:27017/shopsphere?authSource=admin

# ====================
# JWT Authentication
# ====================
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ====================
# CORS
# ====================
CORS_ORIGIN=http://localhost:3000
